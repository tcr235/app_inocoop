<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppInocoop.ViewModels"
             x:Class="AppInocoop.MainPage"
             BackgroundColor="#0f0e17">

    <StackLayout Padding="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="IncreaseTeam1" Text="+" FontSize="32" BackgroundColor="#ff8906" Grid.Column="0"/>
            <Label x:Name="ScoreTeam1" Text="0" FontSize="72" TextColor="White" HorizontalOptions="Center" Grid.Column="0" Grid.Row="1"/>
            <Button x:Name="DecreaseTeam1" Text="-" FontSize="32" BackgroundColor="#ff8906" Grid.Column="0" Grid.Row="2"/>

            <Button x:Name="IncreaseTeam2" Text="+" FontSize="32" BackgroundColor="#ff8906" Grid.Column="1"/>
            <Label x:Name="ScoreTeam2" Text="0" FontSize="72" TextColor="White" HorizontalOptions="Center" Grid.Column="1" Grid.Row="1"/>
            <Button x:Name="DecreaseTeam2" Text="-" FontSize="32" BackgroundColor="#ff8906" Grid.Column="1" Grid.Row="2"/>
        </Grid>

        <Button x:Name="ResetButton" Text="Zerar placar" BackgroundColor="Gray" TextColor="#fffffe"/>
    </StackLayout>
</ContentPage>
